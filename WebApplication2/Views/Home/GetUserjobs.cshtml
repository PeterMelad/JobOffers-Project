@model IEnumerable<WebApplication2.Models.ApplyForJob>

@{
    ViewBag.Title = "GetUserjobs";
}
<h1>All Applied Jobs</h1>
@if (Model.Count() == 0)
{
    <h2 style="color:red; text-align:center">You Didn't apply to any job</h2>
}
else { 
<table class="table table-bordered table-hover table-striped ">
    <tr>
        <th>
            @Html.Label("Job Title")
        </th>
        <th>
            @Html.Label("Message")
        </th>
        <th>
            @Html.Label("Job date")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.job.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "JobDetails", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>

    }

</table>
}
