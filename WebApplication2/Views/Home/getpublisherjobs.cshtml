@model IEnumerable<WebApplication2.Models.Job>

@{
    ViewBag.Title = "publisherjobs";
}

<h2>You publisherd these jobs</h2>

@if (Model.Count() == 0)
{
    <h2 style="color:red; text-align:center">You didnt publish any job yet </h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.publisher.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobContent)
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.publisher.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobContent)
                </td>
               
            </tr>
        }

    </table>
}